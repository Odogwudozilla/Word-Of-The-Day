<p id="notice"><%= notice %></p>
<h1 class="mb-3">Today's Word</h1>

<!-- displays the word of the day  -->
<div class="card-columns cardwrapper ">
  <% @wordbanks.each do |wordbank| %>
  <div class="card border-primary mb-5">
    <div class="card-header">
      <h5 class="card-title"><%= wordbank.topic.upcase %></h5>

    </div>
    <p class="card-text p-2">"<%= wordbank.description %>"
    </p>
    <div class="buttons p-3 ">

      <%= link_to  wordbanks_path do %>
      <button class="btn btn-success mr-3"> View list </button>
      <% end %>

    </div>

    <div class="card-footer">
      <small class="text-muted">Created on <%= wordbank.created_at %></small>
    </div>
  </div>
  <% end %>
</div>


<br>
<!-- link to create new word of the day -->
<%= link_to 'Add a new Word of the Day', new_wordbank_path %>