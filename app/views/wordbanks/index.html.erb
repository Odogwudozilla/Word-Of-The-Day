<p id="notice"><%= notice %></p>

<h1>Wordbanks</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wordbanks.each do |wordbank| %>
      <tr>
        <td><%= wordbank.topic %></td>
        <td><%= wordbank.description %></td>
        <td><%= link_to 'Show', wordbank %></td>
        <td><%= link_to 'Edit', edit_wordbank_path(wordbank) %></td>
        <td><%= link_to 'Destroy', wordbank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wordbank', new_wordbank_path %>
